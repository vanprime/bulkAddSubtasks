{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "{{chrome}}.action": {},
  "{{firefox}}.browser_action": {},
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "{{chrome}}.service_worker": "src/background.js",
    "{{firefox}}.scripts": [
      "src/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://jira.rewe-digital.org/*"
      ],
      "js": [
        "src/content.js"
      ]
    }
  ]
}