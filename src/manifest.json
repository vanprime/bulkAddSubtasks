{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "{{chrome}}.action": {},
  "{{firefox}}.browser_action": {},
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "32": "icon-32.jpg",
    "64": "icon-64.jpg",
    "96": "icon-96.jpg",
    "128": "icon-128.jpg"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.js",
    "{{firefox}}.scripts": [
      "src/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ]
    }
  ]
}