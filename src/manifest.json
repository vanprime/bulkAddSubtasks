{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "{{chrome}}.action": {
    "default_icon": {
      "16": "images/icon-16.jpg",
      "48": "images/icon-48.jpg",
      "128": "images/icon-128.jpg"
    }
  },
  "{{firefox}}.browser_action": {
    "default_icon": {
      "16": "images/icon-16.jpg",
      "48": "images/icon-48.jpg",
      "128": "images/icon-128.jpg"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "{{chrome}}.service_worker": "src/background.js",
    "{{firefox}}.scripts": [
      "src/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ]
    }
  ]
}